<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Authors>Panoramic Data Limited</Authors>
		<PackageProjectUrl>https://github.com/panoramicdata/Datadog.Api/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/panoramicdata/Datadog.Api/</RepositoryUrl>
		<Copyright>Copyright © Panoramic Data Limited 2024</Copyright>
		<PackageLicenseUrl></PackageLicenseUrl>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<PackageIcon>Icon.png</PackageIcon>
		<PackageTags>Datadog API REST</PackageTags>
		<PackageId>PanoramicData.Datadog.Api</PackageId>
		<Title>Datadog.Api</Title>
		<Description>A .NET API for Datadog</Description>
		<Summary>A .NET API for Datadog</Summary>
		<Company>Panoramic Data Limited</Company>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<LangVersion>latest</LangVersion>
		<AnalysisMode>All</AnalysisMode>
		<Nullable>enable</Nullable>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<ApplicationIcon>Icon.ico</ApplicationIcon>
		<ImplicitUsings>enable</ImplicitUsings>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<AnalysisLevel>latest-recommended</AnalysisLevel>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<!-- Update the following before releasing to nuget -->
		<PackageReleaseNotes>Updated various nuget packages</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.1" />
		<PackageReference Include="Nerdbank.GitVersioning" Version="3.7.112">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Refit" Version="8.0.0" />
	</ItemGroup>
	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="C:\Users\DavidBond\Source\Repos\panoramicdata\Datadog.Api\Datadog.Api\.editorconfig" />
		<None Include="Icon.png" Pack="true" PackagePath="" />
	</ItemGroup>
	<ItemGroup>
		<EditorConfigFiles Remove="C:\Users\DavidBond\Source\Repos\panoramicdata\Datadog.Api\Datadog.Api\.editorconfig" />
	</ItemGroup>

</Project>